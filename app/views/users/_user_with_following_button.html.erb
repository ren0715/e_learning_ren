<% @users.each do |user| %>
    <div class="media mb-4 border-bottom pb-3">
        <% if user.avatar? %>
            <%= image_tag user.avatar.url, class: 'rounded-circle',style: 'width: 90px;'%>
        <%else%>
            <%= image_tag "/assets/11.svg", class: '',style: 'width: 90px; height: 90px;'%>
        <%end%>
        <div class="media-body ml-3 pt-4">
            <h5><%= link_to user.name,user_path(user)%></h5>
            <% if @user==current_user%>
                <% if current_user.relationship(user) %>
                    <%= button_to 'Unfollow',relationship_path(user),
                        params: {followed_id: user.id},
                        method: :delete,
                        class:"btn btn-danger float-right"
                    %>
                <%else%>
                    <%= button_to 'Follow',relationships_path,
                        params: {followed_id: user.id},
                        class:"btn btn-primary float-right" 
                    %>
                <%end%>
            <%end%>
        </div>
        
    </div>
<% end %>