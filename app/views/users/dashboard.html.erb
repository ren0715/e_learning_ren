<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar">
                        <div class="default">
                            <% if current_user.avatar? %>
                                <%= image_tag current_user.avatar.url, class: 'w-50 rounded-circle'%>
                            <%else%>
                                <%= image_tag "/assets/11.svg", class: '',style: 'width: 90px; height: 90px;'%>
                            <%end%>
                        </div>
                    </div>

                    <h3 class="mb-0"><%= current_user.name%></h3>
                    <div class="mb-15"><%= current_user.email%></div>
        
                    <div class="mt-3">
                        <%= link_to "View Profile", "#" , class: "btn btn-sm btn-warning text-white"%>
                        <%= link_to "Update Profile", "#" , class: "btn btn-sm btn-info text-white"%>
                    </div>
                </div>
            </div>


            <div class="card mt-4">
                <div class="card-body">
                    <div class="text-center">
                        <div class="d-inline-block mr-4">
                            <%= link_to "2", "#" %>
                            <span>following</span>
                        </div>
                        <div class="d-inline-block">
                            <%= link_to "2", "#" %>
                            <span>followers</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <%= link_to "30 words learned", "#" , class: "btn btn-info btn-block no-border p-5"%>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h4>Activity Feed</h4>
                </div>
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>