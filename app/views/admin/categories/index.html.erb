<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | Categories</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Add Category",new_admin_category_path,class: "btn btn-sm btn-success"%>
                </div>
            </div>
        </div>
        <table class="table">
            <tr>
                <th class="">Title</th>
                <th class="">Description</th>
                <th class="text-center">Words</th>
                <th class="">Action</th>
            </tr>
            <% @categories.each do |f|%>
                <tr>
                    <td>
                        <%= f.title %>
                    </td>
                    <td>
                        <%= f.description %>
                    </td>
                    <td class="text-center">
                        word
                    </td>

                    <td>
                        <%= link_to "Add Word",new_admin_category_path,class: "btn btn-sm btn-primary"%>
                        <%= link_to "Edit",new_admin_category_path,class: "btn btn-sm btn-warning"%>
                        <%= link_to "Remove",new_admin_category_path,class: "btn btn-sm btn-secondary"%>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>
