<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | <%= @category.title %> | Words</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Add Word", new_admin_category_word_path , class: "btn btn-sm btn-success"%>
                    
                    <%= link_to "Back",admin_categories_path%>
                </div>
            </div>
        </div>

        <div class="card-body">
            <h2><%= @category.title%></h2>
            <p><%= @category.description%></p>
        
            <table class="table">
                <tr>
                    <th>Words</th>
                    <th>Answer</th>
                    <th>Action</th>
                </tr>
            </table>
        </div>
    </div>
</div>