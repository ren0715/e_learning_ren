<% if @word.errors.any?%>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= pluralize(@word.errors.count, "error") %></strong> 
        <ul>
        <% @word.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
        
    </div>
    
<% end %>