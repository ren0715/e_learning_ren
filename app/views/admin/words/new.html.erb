<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | <%= @category.title %> | Words</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Back",admin_category_words_path(@category)%>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container w-75">
                <%= form_for ([:admin, @category, @word]) do |f| %>
                    <% render 'error'%>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <%= f.label :content %>
                        </div>
                        <div class="col-sm-7">
                            <%= f.text_field :content, class: 'form-control' %>
                        </div>
                        
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <%= f.label :choices %>
                        </div>
                        <div class="col-sm-9">
                            <%= f.fields_for :choices do |choice| %>
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        <%= choice.text_field :content, class: 'form-control' %>
                                    </div>
                                    <div class="col-sm-3">
                                        <%= choice.label :correct %>
                                        <%= choice.check_box :is_correct, checked: false %>
                                    </div>
                                </div>
                            <% end %>
                        </div>

                    </div>

                    <div class="form-group text-center">
                        <%= f.submit 'Save Word',class: 'btn btn-success'%>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>