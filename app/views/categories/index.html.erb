<div class="container">
    <ul class="nav nav-pills nav-warning float-right justify-content-end">
        <li class="nav-item">
            <%=link_to "All", "#" , class: "nav-link active"%>
        </li>
        <li class="nav-item">
            <%=link_to "Learned", "#" , class: "nav-link"%>
        </li>
        <li class="nav-item">
            <%=link_to "Not Learned", "#" , class: "nav-link"%>
        </li>
    </ul>
    <h1 class="">Categories(<%=@categories.count%>)</h1>
    <hr>

    
    
    <div class="row">
        <% @categories.each do |category|%>
            <div class="col-md-6">
                <div class="card my-3">
                    <div class="card-body">
                        <strong class="h2"><%= category.title%></strong><br>
                        <div class="mt-3 mb-5">
                            <strong>[<%= pluralize(category.words.count, "word")%>] </strong><span><%=category.description%></span>
                        </div>
                        <% if category.lessons.find_by(user_id: current_user.id) %>
                            <div class=""><%= link_to "Show Result",lesson_path(category.lessons.find_by(user_id: current_user.id)),class: "btn btn-outline-secondary w-100"%></div>
                        <% else %>
                            <div class=""><%= button_to "Learn",lessons_path(category_id:category.id),class: "btn btn-primary text-white w-100"%></div>
                        <% end %>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
    <div class="paginate text-center">
        <%= will_paginate @categories%>
    </div>
</div>
