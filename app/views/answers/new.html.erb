<div class="container w-50">
    <div class="row my-4">
        <div class="col-sm-6">
            <h1><%= @category.title %></h1>
        </div>
        <div class="col-sm-6 text-right">
            <h2><span class="text-warning"><%= @lesson.words.count + 1 %></span> of <%=@category.words.count%></h2>
        </div>
    </div>
    
    
    <div class="card">
        <div class="card-body text-center">
            <h2 class="text-warning mb-5"><%= @word.content %></h2>

            <%= form_for([:lesson, @answer]) do |f|%>
                <% @choices.each do |choice| %>
                    <div class="form-group row">
                        <div class="container">
                            <%= f.hidden_field :choice_id, value: choice.id%>
                            <%= f.hidden_field :word_id, value: @word.id%>
                        
                            <%= f.submit choice.content,class: "btn btn-outline-secondary w-100"%>
                        </div>
                        
                    </div>
                <% end %>
            <% end %>

        </div>
    </div>
</div>